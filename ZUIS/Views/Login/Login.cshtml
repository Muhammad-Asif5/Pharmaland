@model ZUIS.Models.Menu_UserReg

@{
    ViewBag.Title = "Login";
   //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}
<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<h2>Login</h2>
<div id="loading"></div>

<body style="text-align:center">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <h1 style="font-family: Times New Roman, Times, serif;color:#1A5276;font-size:60px;margin-top: 0px;text-align:center;margin-bottom:0px">SAPRO</h1>
        <h3 style="font-family: Times New Roman, Times, serif;color:#A3E4D7;text-align:center;font-size:21px;margin-top:0px;margin-bottom:5px">ZUIS SAPRO</h3>

        <p style="font-family: Arial, Helvetica, sans-serif;color:#34495E;margin-left:10px;font-size:16px;text-align:center;margin-top:0px;margin-bottom:0px;">Please enter your ID and Password</p>
        <form style="max-width:30%;padding-top:10px;;margin-left:35%;margin-right:50%;margin-top:-10px;margin-bottom:-10px;width:420px">
            <p class="brd" style="font-family: Arial, Helvetica, sans-serif;color:#344395; margin-left:10px;text-align:center;font-size:13px;margin-top:5px">
                Login ID:
                @Html.TextBoxFor(a => a.User_id, new { style = "margin-left:7px;margin-top: 8px;margin-bottom: 6px;" })
                <br>
                Password:
                @Html.PasswordFor(a => a.User_Password, new { style = "margin-bottom: 6px;margin-left: 2px;" })
                <br>
                <input style="margin-bottom: 6px;margin-left:0%;background-color:#1A5276;border:none;color:white;text-align:center;font-size:13px;padding: 5px 15px;" value="Sign In" type="submit">
                <input id="ResetPassword" onclick="ChangePassword()" style="margin-bottom: 6px;background-color:#1A5276;border:none;color:white;text-align:center;font-size:13px;padding: 5px 15px;" value="Reset Password" type="reset">
            </p>
            <label class="label label-danger">@ViewBag.ErrorMessage</label>
        </form>

        <div class="tooltip" style="text-align:center;margin-top: -5px;font-size:13px;margin-top: 6px;">
            Contact Support Team
            <span class="tooltiptext">Dr. Ejaz Ahmed, Islamabad Campus<br><i>ejaz.ahmed@nu.edu.pk</i></span>
        </div>

        <br>
        <img src="~/Login FOBE_files/fastfps1.jpg" alt="Circle" id="circle" style="width: 870px;max-width: 80%;max-height:10%; margin-bottom:0px;left: 10px;position:relative;padding-top: 15px;">
    }
</body>


<script src="~/Content/bootstrap/js/jquery-3.3.1.min.js"></script>
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>


<script>
    var $loading = $('#loading').hide();

    $(document)
      .ajaxStart(function () {
          $loading.show();
      })
      .ajaxStop(function () {
          $loading.hide();
      });

</script>