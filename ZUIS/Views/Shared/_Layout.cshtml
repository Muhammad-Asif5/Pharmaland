@model ZUIS.Models.VM
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title ZUIS Pharmaland</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <link href="~/David/css/plugins/chosen/bootstrap-chosen.css" rel="stylesheet">
    <link href="~/David/css/plugins/summernote/summernote-bs4.css" rel="stylesheet">

    <!-- Toastr style -->
    <link href="~/David/css/plugins/toastr/toastr.min.css" rel="stylesheet">

    <!-- Sweet Alert -->
    <link href="~/David/css/plugins/sweetalert/sweetalert.css" rel="stylesheet">

    <link href="~/David/css/animate.css" rel="stylesheet">

    <link href="~/Content/spiner.css" rel="stylesheet" />
    <link href="~/Content/spiner1.css" rel="stylesheet" />

    <style>
        .mr_t_30 {
            margin-top: 30px;
        }

        .mr_t_20 {
            margin-top: 20px;
        }

        #myDatatable_wrapper a {
            margin-right: 10px;
            border-radius: 5px;
        }

        .navbar-inverse {
            background-color: #222;
            background-color: #1d355b;
        }
    </style>

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ZUIS Pharmaland", "Home", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        foreach (string groupNumber in ViewBag.MenuGroupCount as List<String>)
                        {
                            if (groupNumber == "PO")
                            {
                                <li class="dropdown">
                                    <a href="" class="dropdown-toggle" data-toggle="dropdown">Purchase <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        @{
                                            foreach (var item in Model.Menus)
                                            {
                                                if (item.user_id.Equals(Session["UserID"]) && item.Menu_Group.Equals("PO"))
                                                {
                                                    <li>@Html.ActionLink(item.Menu.Menu_Title, item.Menu.Action, item.Menu.Controller_name)</li>

                                                }
                                            }
                                        }
                                    </ul>
                                </li>
                            }
                            if (groupNumber == "SR")
                            {
                                <li class="dropdown">
                                    <a href="" class="dropdown-toggle" data-toggle="dropdown">Stock Receipt <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        @{
                                            foreach (var item in Model.Menus)
                                            {
                                                if (item.user_id.Equals(Session["UserID"]) && item.Menu_Group.Equals("SR"))
                                                {
                                                    <li>@Html.ActionLink(item.Menu.Menu_Title, item.Menu.Action, item.Menu.Controller_name)</li>

                                                }
                                            }
                                        }
                                    </ul>
                                </li>
                            }
                            if (groupNumber == "SO")
                            {
                                <li class="dropdown">
                                    <a href="" class="dropdown-toggle" data-toggle="dropdown">Sales Order <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        @{
                                            foreach (var item in Model.Menus)
                                            {
                                                if (item.user_id.Equals(Session["UserID"]) && item.Menu_Group.Equals("SO"))
                                                {
                                                    <li>@Html.ActionLink(item.Menu.Menu_Title, item.Menu.Action, item.Menu.Controller_name)</li>

                                                }
                                            }
                                        }
                                    </ul>
                                </li>
                            }
                            if (groupNumber == "SI")
                            {
                                <li class="dropdown">
                                    <a href="" class="dropdown-toggle" data-toggle="dropdown">Sales Invoice <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        @{
                                            foreach (var item in Model.Menus)
                                            {
                                                if (item.user_id.Equals(Session["UserID"]) && item.Menu_Group.Equals("SI"))
                                                {
                                                    <li>@Html.ActionLink(item.Menu.Menu_Title, item.Menu.Action, item.Menu.Controller_name)</li>

                                                }
                                            }
                                        }
                                    </ul>
                                </li>
                            }
                            if (groupNumber == "GR")
                            {
                                foreach (var item in Model.Menus)
                                {
                                    if (item.user_id.Equals(Session["UserID"]) && item.Menu_Group.Equals("GR"))
                                    {
                                        <li>@Html.ActionLink(item.Menu.Menu_Title, item.Menu.Action, item.Menu.Controller_name)</li>

                                    }
                                }
                            }
                            if (groupNumber == "OT")
                            {
                                <li class="dropdown">
                                    <a href="" class="dropdown-toggle" data-toggle="dropdown">Others <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        @{
                                            foreach (var item in Model.Menus)
                                            {
                                                if (item.user_id.Equals(Session["UserID"]) && item.Menu_Group.Equals("OT"))
                                                {
                                                    <li>@Html.ActionLink(item.Menu.Menu_Title, item.Menu.Action, item.Menu.Controller_name)</li>

                                                }
                                            }
                                        }
                                    </ul>
                                </li>
                            }

                            if (groupNumber == "TX")
                            {
                                <li class="dropdown">
                                    <a href="" class="dropdown-toggle" data-toggle="dropdown">Text Report <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        @{
                                foreach (var item in Model.Menus)
                                {
                                    if (item.user_id.Equals(Session["UserID"]) && item.Menu_Group.Equals("TX"))
                                    {
                                        <li>@Html.ActionLink(item.Menu.Menu_Title, item.Menu.Action, item.Menu.Controller_name)</li>

                                    }
                                }
                                        }
                                    </ul>
                                </li>
                            }
                        }

}
                    <li><a href="#">@Session["UserID"]</a></li>
                    <li><a href="#">@Session["Branch_No"]</a></li>
                    <li><a href="#">@Session["UserGroup"]</a></li>
                    <li><a href="/Login/SignOut">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <br />
        <br />
        @RenderBody()
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - ZUIS Pharmaland</p>
        </footer>
    </div>





    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.bootstrap.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.flash.min.js"></script>
    <script src="~/Scripts/DataTables/jszip.min.js"></script>
    <script src="~/Scripts/DataTables/pdfmake.min.js"></script>
    <script src="~/Scripts/DataTables/vfs_fonts.js"></script>
    <script src="~/Scripts/DataTables/buttons.html5.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.print.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.select.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/DataTables/responsive.bootstrap.min.js"></script>

    <!-- Chosen -->
    <script src="~/David/js/plugins/chosen/chosen.jquery.js"></script>

    <!-- Toastr script -->
    <script src="~/David/js/plugins/toastr/toastr.min.js"></script>

    <!-- Sweet alert -->
    <script src="~/David/js/plugins/sweetalert/sweetalert.min.js"></script>


</body>
</html>